<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.solvd.carRental.dao.ICarDAO">
	<resultMap id="CarResultMap" type="com.solvd.carRental.models.Car" autoMapping="false">
		<id property="id" column="id"/>
		<result property="licensePlate" column="license_plate"/>
		<result property="modelYear" column="model_year"/>
		<result property="color" column="color"/>
		<association property="model" resultMap="com.solvd.carRental.ICarModelDAO.CarModelResultMap"/>
	</resultMap>
	
	<select id = "getCarById" resultMap = "CarResultMap">
	<![CDATA[
		SELECT * FROM Cars c
		INNER JOIN Car_Models cm
		ON c.model_id = cm.id
		WHERE c.id = #{id}
	]]>
	</select>
	
	<select id = "getAllCars" resultMap = "CarResultMap">
	<![CDATA[
		SELECT * FROM Cars c
		LEFT JOIN Car_Models cm
		ON c.model_id = cm.id
	]]>
	</select>
	
	<insert id = "insertCar" useGeneratedKeys = "true" keyProperty= "id">
	<![CDATA[
		INSERT INTO Cars (license_plate, model_year, color)
		VALUES (#{licensePlate}, #{modelYear}, #{color})
	]]>
	</insert>
	
	<update id = "updateCarById">
	<![CDATA[
		UPDATE Cars SET
		license_plate = #{licensePlate},
		model_year = #{modelYear},
		color = #{color}
		WHERE id = #{id}
	]]>
	</update>
	
	<delete id = "deleteCarById">
	<![CDATA[
		DELETE FROM Cars WHERE id = #{id}
	]]>
	</delete>
</mapper>